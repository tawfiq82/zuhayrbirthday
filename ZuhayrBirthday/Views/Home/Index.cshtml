@{
    ViewBag.Title = "Home Page";
}

<div class="header">
    <div class="header1">Calling all Minions!</div>
    <div class="header2">Join Us to Celebrate</div>
    <div class="header3">Zuhayr's 1st Birthday</div>
</div>


<div class="row">
    <div class="col-xs-12 col-sm-12  col-md-6">
        <div id="guest-invitation" class="row">
            <div id="invitaion-info" class="col-xs-12">
                <div class="details">Yaarl Function Centre</div>
                <div class="details">221A Wentworth Ave</div>
                <div class="details">Pendle Hill, NSW-2145</div>
                <div class="details">Date: 12-September-2015</div>
                <div class="details">Time: 7:30 PM</div>
                <div class="details">THEME</div>
                <div class="details details-theme">Costume Party For Kids</div>
            </div>
            <div id="guest-login" class="col-xs-12">
                <div class="info">
                    Hi, You can confirm your invitation by simply enter your 10 digit Mobile No. and click Next.
                    <label class="col-xs-12 col-sm-6">Mobile No.</label>
                    <div class="col-xs-12 col-sm-6">
                        <input type="text" placeholder="(e.g. 0406584286)" id="mobile-no" name="mobile-no" value="" />
                    </div>
                </div>
                <input type="button" value="Next" class="btn" onclick="login()" style="margin-bottom:5px;" />
            </div>
            <div id="guest-confirmed" class="col-xs-12" style="display:none">
                <div class="info">Great! You have already confirmed your invitation. If want to change it again, you can do it by simply clicking Edit.</div>
                @if (Model.AdultCount > 0)
                {
                    <div class="guest-item"><label>Adults:</label><span id="confirmed-adult-count">@Model.ConfirmedAdultCount</span></div>
                }
                @if (Model.ChildrenCount > 0)
                {
                    <div class="guest-item"><label>Children:</label><span id="confirmed-children-count">@Model.ConfirmedChildrenCount</span> </div>
                }
                @if (Model.InfantCount > 0)
                {
                    <div class="guest-item"><label>Infants:</label> <span id="confirmed-infant-count">@Model.ConfirmedInfantCount</span> </div>
                }

                <input type="button" value="Edit" class="btn" onclick="onclickEdit();" />
            </div>
            <div id="guest-uninvited" class="col-xs-12" style="display:none">
                <div class="info">Sorry! It seems like your mobile no. is not registered in our Guest List. Please contact Tawfiq or Zarifa.</div>
            </div>
            <div id="guest-edit" class="col-xs-12" style="display:none" )'>
                <div class="info">Great! Can’t wait to see you!</div>
                @if (Model.AdultCount > 0)
                {
                    <div class="guest-item"><label>Adults:</label><span id="edit-adult-count">@Model.ConfirmedAdultCount</span></div>
                }
                @if (Model.ChildrenCount > 0)
                {
                    <div class="guest-item"><label>Children:</label><span id="edit-children-count">@Model.ConfirmedChildrenCount</span> </div>
                }
                @if (Model.InfantCount > 0)
                {
                    <div class="guest-item"><label>Infants:</label> <span id="edit-infant-count">@Model.ConfirmedInfantCount</span> </div>
                }

                <div class="info" style="font-size:12px;">Made a mistake? Click Edit to change how many are coming.</div>
                <input type="button" value="Edit" class="btn" onclick="onclickEdit();" />
            </div>
            <div id="guest-form" class="col-xs-12" style='display:none'>
                <div id="not-confirmed-guest-msg"></div>
                <div class="info">How many people are coming?</div>
                <div id="form-adult" class="row guest-item">
                    <label class="col-xs-12 col-sm-6">Adults</label>
                    <div class="col-xs-12 col-sm-6">
                        <select id="adult-count"></select>
                    </div>
                </div>
                <div id="form-children" class="row guest-item">
                    <label class="col-xs-12 col-sm-6">Children (2-11)</label>
                    <div class="col-xs-12 col-sm-6">
                        <select id="children-count"></select>
                    </div>
                </div>
                <div id="form-infant" class="row guest-item">
                    <label class="col-xs-12 col-sm-6">Infants (Under 2)</label>
                    <div class="col-xs-12 col-sm-6">
                        <select id="infant-count"></select>

                    </div>
                </div>
                <input type="button" value="Confirm" class="btn" onclick="onclickSave()" style="margin-bottom:5px;" />
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-6">
        <a href="http://maps.google.com/maps?saddr=&daddr=221A Wentworth Ave, NSW 2145" target="_black"><div id="gmap_canvas" style="height:370px"></div></a>
        <a href="http://maps.google.com/maps?saddr=&daddr=221A Wentworth Ave, NSW 2145" target="_black">
            <img class="direction" src="~/Content/pointer.png" />Get Direction
        </a>
    </div>
</div>


<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
<script type="text/javascript">
        function init_map() {
            var myOptions = {
                zoom: 14,
                center: new google.maps.LatLng(-33.801371, 150.95729499999993),
                mapTypeId: google.maps.MapTypeId.ROADMAP
            };
            map = new google.maps.Map(document.getElementById("gmap_canvas"), myOptions);
            marker = new google.maps.Marker({
                map: map,
                position: new google.maps.LatLng(-33.801371, 150.95729499999993)
            });
            infowindow = new google.maps.InfoWindow({
                content: "<b>Yaarl Function Centre</b><br/>221A Wentworth Ave<br/> Pendle Hill, NSW 2145"
            });
            google.maps.event.addListener(marker, "click", function () {
                infowindow.open(map, marker);
            });
            infowindow.open(map, marker);
        }
        google.maps.event.addDomListener(window, 'load', init_map);
</script>
<script>
    var confirmUrl = '@Html.Raw(Url.Action("Confirm","Home"))';
    var loginUrl = '@Html.Raw(Url.Action("Login","Home"))';
</script>